<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="#FFFEFEFE"
    app:cardCornerRadius="10dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/textViewRecentesTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pagamento"
            android:textColor="@color/topRecentes"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewRecentesDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dateExemple"
            android:textAlignment="textEnd"
            android:textColor="@color/topRecentes"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/textViewRecentesDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/descExemple"
            android:textColor="@color/rodapeRecentes"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textViewRecentesValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/valueExemple"
            android:textAlignment="textEnd"
            android:textColor="@color/rodapeRecentes"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>
